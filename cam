import tkinter as tk
import time

# Schedule dictionary
schedule = {
    '6:00 AM': 'Wake up and get dressed',
    '6:30 AM': 'Brush teeth and wash face',
    '6:35 AM': 'Grab backpack and head to bus stop',
    '7:40 AM': 'School',
    '3:00 PM': 'Do homework',
    '3:30 PM': 'Relax',
    '6:00 PM': 'Exercise',
    '6:30 PM': 'Dinner and free time',
    '9:00 PM': 'Shower and get ready for bed',
    '9:30 PM': 'Sleep'
}

# Get current time
current_time = time.strftime("%I:%M:%S %p")

# Get current activity
current_activity = ""
for key in schedule:
    if key <= time.strftime("%I:%M %p"):
        current_activity = schedule[key]
    else:
        break

# Initialize tkinter
root = tk.Tk()
root.title("Daily Schedule")
root.geometry("800x480")
root.configure(background='black')

# Create time label
time_label = tk.Label(root, text=current_time, font=('Roboto Slab', 70), fg='white', bg='black')
time_label.pack(expand=True)

# Create current activity label
activity_label = tk.Label(root, text=current_activity, font=('Roboto Slab', 30), fg='white', bg='black')
activity_label.pack(expand=True)

# Update time and current activity
def update():
    current_time = time.strftime("%I:%M:%S %p")
    time_label.configure(text=current_time)
    for key in schedule:
        if key <= time.strftime("%I:%M %p"):
            current_activity = schedule[key]
        else:
            break
    activity_label.configure(text=current_activity)
    root.after(1000, update)

# Start updating
update()

# Stop updating and exit on pressing Q key
def stop(event):
    if event.char == "q" or event.char == "Q":
        root.destroy()

root.bind("<Key>", stop)

# Start the application
root.mainloop()
