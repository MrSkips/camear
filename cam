import datetime
import tkinter as tk
from tkinter.font import Font

# Define the schedule for each day of the week
schedule = {
    "Monday": {
        "wake_up": "6:00am",
        "events": [
            "Catch the bus to school",
            "Attend school from 7:40am-2:20pm",
            "Catch the bus home",
            "Wear shop shirt, paired with khaki or black pants and a pair of Air Force 1s"
        ]
    },
    "Tuesday": {
        "wake_up": "6:00am",
        "events": [
            "Catch the bus to school",
            "Attend school from 7:40am-2:20pm",
            "Catch the bus home",
            "Wear shop sweatshirt, paired with khaki or black pants and a pair of Air Force 1s"
        ]
    },
    "Wednesday": {
        "wake_up": "6:00am",
        "events": [
            "Catch the bus to school",
            "Attend school from 7:40am-2:20pm",
            "Catch the bus home",
            "Take a shower at 9:30pm",
            "Wear shop long sleeve, paired with khaki or black pants and a pair of Air Force 1s"
        ]
    },
    "Thursday": {
        "wake_up": "6:00am",
        "events": [
            "Catch the bus to school",
            "Attend school from 7:40am-2:20pm",
            "Catch the bus home",
            "Wear shop shirt, paired with khaki or black pants and a pair of Air Force 1s"
        ]
    },
    "Friday": {
        "wake_up": "6:00am",
        "events": [
            "Catch the bus to school",
            "Attend school from 7:40am-2:20pm",
            "Catch the bus home",
            "Take a shower at 9:30pm",
            "Wear shop sweatshirt, paired with khaki or black pants and a pair of Air Force 1s"
        ]
    },
    "Saturday": {
        "events": [
            "Wear gray shirt, black pants, and white sneakers. Layer a black or gray jacket over the shirt for a cool look"
        ]
    },
    "Sunday": {
        "events": [
            "Wear navy blue shirt, gray pants, and brown boots. Accessorize with a brown leather belt and a watch for a polished touch"
        ]
    }
}

# Create a Tkinter window
window = tk.Tk()

# Set the window title and size
window.title("Daily Schedule")
window.attributes('-fullscreen', True)

# Set the font for the schedule
font = Font(family="Roboto Slab", size=20)

# Get the current day of the week
day_of_week = datetime.datetime.today().strftime('%A')

# Display the schedule for the current day in the window
schedule_label = tk.Label(window, text=f"Schedule for {day_of_week}:", font=font)
schedule_label.pack(side="top", pady=50)
if day_of_week in schedule:
    day_schedule = schedule[day_of_week]
    if "wake_up" in day_schedule:
        wake_up_label = tk.Label(window, text=f" - Wake up at {day_schedule['wake_up']}", font=font)
        wake_up_label.pack()
    for event in day_schedule["events"]:
        event
