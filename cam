import tkinter as tk
import time

# Define the schedule
schedule = {
    '6:00 AM': 'Wake up and get dressed',
    '6:30 AM': 'Brush teeth and wash face',
    '6:35 AM': 'Grab backpack and head to bus stop',
    '7:40 AM': 'School',
    '2:20 PM': 'School ends',
    '3:00 PM': 'Do homework',
    '3:30 PM': 'Relax',
    '6:00 PM': 'Exercise',
    '6:30 PM': 'Dinner and free time',
    '9:00 PM': 'Shower and get ready for bed',
    '9:30 PM': 'Sleep'
}

# Initialize the tkinter window
window = tk.Tk()
window.configure(background='black')
window.attributes('-fullscreen', True)

# Create the label for displaying the time and activity
label_time = tk.Label(window, font=('Roboto Slab', 80), fg='white', bg='black')
label_time.pack(expand=True)

# Function for updating the time and activity
def update_time():
    current_time = time.strftime('%I:%M:%S %p')
    current_activity = ''
    for time_str, activity in schedule.items():
        if time.strftime('%I:%M %p') == time_str:
            current_activity = activity
            break
    label_time.config(text=current_time + '\n' + current_activity)
    window.after(1000, update_time)

# Start the update loop
update_time()

# Function for stopping the program if 'q' key is pressed
def stop_program(event):
    if event.char == 'q':
        window.destroy()

# Bind the 'q' key to stop_program function
window.bind('<Key>', stop_program)

# Run the tkinter mainloop
window.mainloop()
