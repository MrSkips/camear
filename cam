import tkinter as tk
import time

# Define the schedule
schedule = {
    '6:00 AM': 'Wake up and get dressed',
    '6:30 AM': 'Brush teeth and wash face',
    '6:35 AM': 'Grab backpack and head to bus stop',
    '7:40 AM': 'School',
    '3:00 PM': 'Do homework',
    '3:30 PM': 'Relax',
    '6:00 PM': 'Exercise',
    '6:30 PM': 'Dinner and free time',
    '9:00 PM': 'Shower and get ready for bed',
    '9:30 PM': 'Sleep'
}

# Create the tkinter window
root = tk.Tk()

# Set the font and background color
font = ('Roboto Slab', 48)
bg_color = 'black'

# Create the label to display the time and activity
time_label = tk.Label(root, text='', font=font, fg='white', bg=bg_color)
time_label.pack(expand=True)

# Function to update the time and activity
def update_time():
    current_time = time.strftime('%I:%M:%S %p')
    current_activity = ''
    for key, value in schedule.items():
        if key == current_time[:-3]:
            current_activity = value
            break
    time_label.config(text=current_time + '\n' + current_activity)
    root.after(1000, update_time)

# Start the update loop
update_time()

# Function to stop the program when 'q' is pressed
def stop_program(event):
    if event.char == 'q':
        root.quit()

# Bind the 'q' key to the stop_program function
root.bind('<Key>', stop_program)

# Set the window properties
root.attributes('-fullscreen', True)
root.configure(background=bg_color)

# Start the main loop
root.mainloop()
